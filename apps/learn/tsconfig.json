{
  "extends": "@repo/ts-config/appConfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@src/*": ["./src/core/*"]
    },
    "jsx": "preserve",
    "types": ["jest", "node"]
  },
  "include": [
    "**/*.test.ts",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
