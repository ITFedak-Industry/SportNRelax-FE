{
  "extends": "@repo/ts-config/appConfig.json",
  "compilerOptions": {
    "module": "es2022",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"]
    },
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "types": ["jest", "node", "vite/client"]
  },
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*"
  ],
  "exclude": ["node_modules"]
}
